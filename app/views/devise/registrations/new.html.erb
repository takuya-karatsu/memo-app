<div class="container">
  <div class="row register-form">
    <div class="form-header mt-5"><b>ユーザー登録</b></div>
    <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text mb-2">ニックネーム</label>
        <span class="badge bg-warning">必須</span>
      </div>
      <%= f.text_field :nickname, class:"mb-3 input-default", placeholder:"例) メモ太郎", maxlength:"20" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text mb-2">Eメール</label>
        <span class="badge bg-warning">必須</span>
      </div>
      <%= f.email_field :email, class:"mb-3 input-default"%>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text mb-2">パスワード（6文字以上）</label>
        <span class="badge bg-warning">必須</span>
      </div>
      <%= f.password_field :password, class:"mb-3 input-default"%>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text mb-2">パスワード（確認用）</label>
        <span class="badge bg-warning">必須</span>
      </div>
      <%= f.password_field :password_confirmation, class:"mb-3 input-default"%>
    </div>

    <div class="register-btn mb-5">
      <%= f.submit "ユーザー登録", class:"btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>